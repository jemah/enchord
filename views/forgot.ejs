<!DOCTYPE html>
<html>
<head>
  <link href='http://fonts.googleapis.com/css?family=Lato:100,300' rel='stylesheet' type='text/css'>
  <link href="css/login.css" rel="stylesheet">
</head>
<body ng-controller="LoginController">
  <form action="/forgot" method="post" name="loginForm" novalidate>
    <div id="wrapper">
      <div class="form">
        <div class="header">
          <h2>Forgot Your Password?</h2>
        </div>
        <input type="text" placeholder="Email Address" name ="email" ng-model="user.email" ng-minlength="3" ng-maxlength="50" required><br/>
        <div class="button submit" type="submit" onclick="submitOnClick('loginForm')">
          <img src="./images/checkmark.png" alt="checkmark">
        </div>
      </div>
    </div>
  </form>
  <script type="text/javascript">
    function submitOnClick(formName){
        document.forms[formName].submit();
    }
  </script>
</body>
</html>