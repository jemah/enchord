    <form action="/signup" method="POST" name="signupForm" novalidate>
        <div id="wrapper">
            <div class="form">
                <div class="header">
                    <h2>Sign Up</h2>
                </div>
                <div class="button facebook">
                    <a href="/auth/facebook"><img src="./images/facebook.png" alt="facebook"></a>
                </div>
                <div class="button twitter">
                    <a href="/auth/twitter"><img src="./images/twitter.png" alt="twitter"></a>
                </div>
                <div class="button google">
                    <a href="/auth/google"><img src="./images/google.png" alt="google"></a>
                </div>
                <br><p><span>OR</span></p><br>

                <input type="text" placeholder="Email Address" name="email" ng-model="user.email" ng-minlength="3" ng-maxlength="20" ng-pattern="/^[A-Za-z0-9-_]*$/"><br/>

                <input type="password" placeholder="Password" name="password" ng-model="user.password" ng-minlength="8" ng-maxlength="20" placeholder="Password" ng-change="checkPass()" ng-pattern="/^[A-Za-z0-9\!\@\#\$\%\^\&\*\(\)\{\}\[\]\.\,\;\:\?\-\_\+\=\<\>\~\`]*$/"><br/>

                <input type="password" placeholder="Confirm Password" name="password_repeat" ng-model="user.password_repeat" ng-minlength="8" ng-maxlength="20" placeholder="Confirm Password" ng-change="checkPass()" ng-pattern="/^[A-Za-z0-9\!\@\#\$\%\^\&\*\(\)\{\}\[\]\.\,\;\:\?\-\_\+\=\<\>\~\`]*$/">

                <input class="button submit" type="submit" onclick="submitForm()">
                    <img src="./images/checkmark.png" alt="checkmark">
                </input>

                <p><a href="/login" style="text-decoration:none; font-size: 1.2em;">Already have an account?</p></a>
            </div>
        </div>
    </form>


