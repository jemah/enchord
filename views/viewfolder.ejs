<!DOCTYPE html>
<html lang='en' ng-app='enchord'>

<head>
    <% include head.ejs %>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/font-awesome.min.css" rel="stylesheet" type="text/css" />
    <link href="/css/AdminLTE.css" rel="stylesheet" type="text/css" />

    <style type="text/css">
        body {
            font-family: avenir;
        }
    </style>
</head>

<body class="skin-black" ng-controller="ProfileController">
        <header class="header">
            <a href="/" class="logo" style="font-family:avenir;">
                Enchord
            </a>
            <nav class="navbar navbar-static-top" role="navigation">
                <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="navbar-right">
                    <!-- IF LOGGED IN -->
                    <% if(isLoggedIn) { %>
                    <ul class="nav navbar-nav">
                        <li><a href="/members/settings"><i class="fa fa-cogs"></i>  Account Settings</a></li>
                        <li><a href="/logout"><i class="fa fa-sign-out"></i> Sign Out</a></li>
                    </ul>
                    <!-- NOT LOGGED IN -->
                    <% } else { %>
                    <ul class="nav navbar-nav">
                        <li><a href="/signup"><i class="fa fa-cogs"></i>  Sign Up</a></li>
                        <li><a href="/login"><i class="fa fa-sign-out"></i> Login</a></li>
                    </ul>
                    <% } %>

                </div>
            </nav>
        </header>
        <div class="wrapper row-offcanvas row-offcanvas-left" ng-controller="FolderViewController" ng-init="init('<%= _id %>')">
            <% include side_editfolder.ejs %>
            <% include partial_viewsong.ejs %>
        </div>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
        <script src="/js/jquery-ui-1.10.3.min.js" type="text/javascript"></script>
        <script src="/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="/js/AdminLTE/app.js" type="text/javascript"></script> 
        <script src="/js/AdminLTE/dashboard.js" type="text/javascript"></script> 
</body>
</html>