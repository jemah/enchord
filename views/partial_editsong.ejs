<aside class="right-side">
	<form class="sidebar-form" name="markupForm" novalidate>
	<div class="row">
        <!-- MARKUP -->
        <div class="col-md-12">
            <div class="form-group" ng-class="{ 'has-error' : markupForm.data.$invalid && !markupForm.data.$pristine }">
                <label class="control-label" for="data">Lyrics/Chords</label>
                <!-- Make sure this has id = data -->
                <textarea id="data" name="data" class="form-control" ng-maxlength="10000" ng-model="song.data" ng-change="parsehtml()" ng-pattern="/^[A-Za-z0-9 \$\?\!\&\-\_\,\.\;\:\(\)\{\}\[\]\<\>\n\t\'&#34;\~\|\/\\\#\%\^\*\+\=]*$/" style="min-height:720px; resize:none;" ></textarea>
                <!--<input type="text" name="artist" class="form-control" ng-model="song.artist" ng-minlength="1" ng-maxlength="100" placeholder="Artist" >-->
                <span ng-show="markupForm.data.$error.maxlength" class="help-block">Song is too long (sorry!)</span>
                <span ng-show="markupForm.data.$error.pattern" class="help-block">Invalid characters. Please use only alphanumeric characters or $?!&-_,.;:(){}[]<>'&#34;|~/\#%^*+=</span>
            </div>
        </div>

        <!-- CHORD SHEET -->
        <!-- <div class="col-md-12">
            <div class="form-group" ng-class="{ 'has-error' : markupForm.result.$invalid && !markupForm.result.$pristine }">
                <label class="control-label" for="result">Live View</label>
                <textarea name="result" style="font-family:Courier" class="form-control" ng-model="song.result" disabled></textarea>
            </div>
        </div> -->

        <div class="chordSheet col-md-6" ng-bind-html="parsedResult()">
        </div>
    </div>
	</form>
</aside>
