<aside class="right-side">
    <section class="content-header">
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active"><%= artistname %></li>
        </ol>
        <p>Display <select ng-model="pageSize" ng-options="pageSize for pageSize in pageSizes"></select> songs per page</p>
    </section>
    <h1><%= artistname %></h1>
    <table class="table">
        <thead>
            <tr>
                <th style="max-width: 20px;"></th>
                <!-- <th style="max-width: 5px;"></th> -->
                <th>Song</th>
                <th>Artist</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>
            <tr data-ng-repeat="song in artistsongs | startFrom:currentPage*pageSize | limitTo:pageSize">
                <td style="max-width: 20px;"><i style="margin-left: 20px;" class="fa fa-star" style="color:yellow;"></i> {{song.upvote}}</td>
                <!-- <td style="max-width: 5px;"><i style="margin-left: 10px;" class="fa fa-plus"></i></td> -->
                <td><a href="/viewsong/{{song._id}}">{{ song.title }}</a></td>
                <td><a href="/artist/{{song.artist}}">{{ song.artist }}</a></td>
                <td>{{ song.genre }}</td>
            </tr>
        </tbody>
                <td>{{ song.genre }}</td>     
        
    </table>
     <div style="text-align:center">
        <button ng-disabled="currentPage == 0" ng-click="currentPage = currentPage-1"><</button>
        Page {{currentPage+1}} of {{numberOfPages()}}
        <button ng-disabled="currentPage >= usersongs.length/pageSize - 1"  ng-click="currentPage = currentPage+1">></button>  
    </div> 
</aside>