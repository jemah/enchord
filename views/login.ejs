  <body ng-controller="LoginController">
    <!-- show any messages that come back with authentication -->
  	<% if (message.length > 0) { %>
		  <div class="alert alert-danger"><%= message %></div>
	  <% } %>

    <form action="/login" method="post" name="loginForm" novalidate>
        <div id="wrapper">
            <div class="form">
                <div class="header">
                    <h2>Sign In</h2>
                </div>
                <div class="button facebook">
                    <a href="auth/facebook"><img src="./images/facebook.png" alt="facebook"></a>
                </div>
                <div class="button twitter">
                    <a href="auth/twitter"><img src="./images/twitter.png" alt="twitter"></a>
                </div>
                <div class="button google">
                    <a href="auth/google"><img src="./images/google.png" alt="google"></a>
                </div>
                <br><p><span>OR</span></p><br>
                <input type="text" placeholder="Email Address"><br/>
                <input type="password" placeholder="Password">
                <div class="button submit">
                    <img src="./images/checkmark.png" alt="checkmark">
                </div>
                <p><a href="./reset.html" style="text-decoration:none; font-size: 1.2em;">Forgot your password?</p></a>
            </div>
        </div>
    </form>
